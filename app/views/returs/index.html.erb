<h1 class="my-5 text-center font-weight-bolder text-primary">Retur Barang</h1>

<div class="row px-3">
  <div class="col-12 mt-3 d-flex justify-content-right">
    <%= link_to new_retur_path, class:"btn btn-primary btn-custom rounded-pill text" do %>
      <i id="my-icon" class="fas fa-plus"></i>
      <span>Tambah Retur Barang</span>
    <% end %>
  </div>
</div>

<br>

  <div class="row mx-0">
    <div class="col-12">
      <div class="table-responsive">
         <table class="table table-bordered" id="table">
            <thead class="bg-primary">
              <tr class="text-center">
                <!-- <th style="width: 5%;">No</th> -->
                <th class="align-middle" style="width: 5%;">Jenis Penerimaan</th>
                <th class="align-middle">No Pengeluaran</th>
                <th class="align-middle">Kode Proyek</th>
                <th class="align-middle">Nama Proyek</th>
                <th class="align-middle">Asal Gudang</th>
                <th class="align-middle">Gudang Pengembalian</th>
                <th class="align-middle">Keterangan Retur</th>
                <th class="align-middle">Aksi</th>
              </tr>
            </thead>
            <tbody>
            <% @returs.each_with_index do |returs, index| %>
            <tr>
              <!-- <td class="align-middle text-center">
                <%= index+1 %> 
              </td> -->
              <td class="align-middle text-center"><%= returs.jenis_penerimaan %></td>
              <td class="align-middle text-center"><%= returs.no_pengeluaran %></td>
              <td class="align-middle text-center"><%= returs.kode_proyek %></td>
              <td class="align-middle text-center"><%= returs.nama_proyek %></td>
              <td class="align-middle text-center"><%= returs.jenis_pengeluaran %></td>
              <td class="align-middle text-center"><%= returs.asal_gudang %></td>
              <td class="align-middle text-center"><%= returs.gudang_pengembalian %></td>
              <td class="align-middle text-center">
                <%= link_to returs, class:"btn btn-success btn-sm rounded-circle text-white py-1 mb-1 px-2" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
                <%= link_to edit_retur_path(returs),  class:"btn btn-warning btn-sm rounded-circle text-white py-1 mb-1 px-2" do  %>
                  <i class="fas fa-pencil-alt"></i>
                <% end %>
                <%= link_to returs, method: :delete, class:"btn btn-danger btn-sm rounded-circle text-white py-1 mb-1 px-2",
                            data: { confirm: 'Are you sure?' } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </td>
             </tr>
             <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>


