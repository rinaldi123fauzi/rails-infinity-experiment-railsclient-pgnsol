<% unless notice.blank? %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <strong id="notice"><%= notice %></strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end %>

<h1 class="my-5 text-center font-weight-bolder text-primary">Data Divisi</h1>

<div class="row px-2 my-3">
  <div class="col-12 d-flex justify-content-right">
      <%= link_to new_division_path, class:"btn btn-primary btn-custom rounded-pill text" do %>
        <i id="my-icon" class="fas fa-plus"></i>
         <span>Tambah Divisi</span>
        <% end %>
    </div>
</div>

<div class="row mx-0">
  <div class="col-12">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable">
      <thead class="bg-primary">
        <tr class="text-center">
          <th style="width: 1%;">No</th>
          <th class="align-middle" style="width: 20%;">Nama Divisi</th>
          <th class="align-middle" style="width: 10%;">Aksi</th>
          </div>
        </tr>
</thead>
  <tbody>
    <% @divisions.each_with_index do |division, index| %>
         <tr>
          <td class="align-middle text-center">
            <%= index+1 %>
          </td>
          <td><%= division.nama_divisi %></td>
          <td class="text-center">
            <%= link_to division, class:"btn btn-success btn-sm rounded-circle text-white py-1 mb-1 px-2" do %>
              <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_division_path(division), class:"btn btn-warning btn-sm rounded-circle text-white py-1 mb-1 px-2" do %>
              <i class="fas fa-pencil-alt"></i>
            <% end %>
            <%= link_to division, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm rounded-circle text-white py-1 mb-1 px-2" do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

