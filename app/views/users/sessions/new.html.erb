<div class="bg" style="background-image: url(<%= asset_path 'wave.svg' %>);">
        <%= image_tag "pgn-logo.png", :class => "pgn-logo" %>
        <%= image_tag "infinity-logo.png", :class => "infinity-logo" %>
    <div class="col col-lg-12 py-4" style="position: fixed">

      <% unless alert.blank?  %>
        <%= render "users/shared/error_messages", resource: @user %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong><%= alert %></strong>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

      <div class="form-box">
        <div class="header-text">
          <h1 class="font-weight-bold text-light">INFINITY</h1>
         <p class="font-weight-bold text-light sub-title">Inventory Information and Integration Activity</p>
              <hr class="bg-light mt-3" style="height: 2px;">
          <h6 class="text-light" style="margin-top: 20px; padding-top:30px">
            Silahkan login untuk masuk ke dalam aplikasi
          </h6>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="col-12 input-icons">
            <i class="fa fa-user icon"></i>
            <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control input-field", placeholder: "Username" %>
          </div>

          <div class="col-12 input-icons">
            <i class="fa fa-lock icon"></i>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control input-field", placeholder: "Password" %>
          </div>


          <div class="col-12 py-4" style="text-align: center;">
            <button type="submit" class="btn">Login</button>
          </div>
          <!-- <div class="footer-text">
              <h6 class="text-light">Infinity - PT PGAS Solution <br>
                ©️ 2021</h6>
            </div> -->
        <% end %>
      </div>
    </div>
  </div>
</div> 