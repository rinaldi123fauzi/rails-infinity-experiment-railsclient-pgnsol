                <div class="col-sm-8">
                <%= form.text_field :ukuran, class: "form-control" %>
                </div>
            </div>

            <div class="mb-3 row">
                <%= form.label :tipe, "Tipe", class: "col-sm-4 col-form-label"  %>
                <div class="col-sm-8">
                <%= form.text_field :tipe, class: "form-control" %>
                </div>
            </div>

            <div class="mb-3 row">
                <%= form.label :merek, "Merek", class: "col-sm-4 col-form-label"  %>
                <div class="col-sm-8">
                <%= form.text_field :merek, class: "form-control" %>
                </div>
            </div>

            <div class="mb-3 row">
                <%= form.label :serial, "Serial Number", class: "col-sm-4 col-form-label"  %>
                <div class="col-sm-8">
                <%= form.text_field :serial, class: "form-control" %>
                </div>
            </div>

            <div class="mb-3 row">
                <%= form.label :lain, "Lain - lain", class: "col-sm-4 col-form-label"  %>
                <div class="col-sm-8">
                <%= form.text_field :lain, class: "form-control" %>
                </div>
            </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="mt-4 float-right">
                <button class="btn btn-primary text-white btn-custom rounded-pill" data-dismiss="modal">Simpan</button>
                </div>
        <% end %>

    <div class="mt-4">
       <%= link_to 'Kembali', receife_path(params[:id]), class:"btn btn-secondary text-white btn-custom rounded-pill" %>
