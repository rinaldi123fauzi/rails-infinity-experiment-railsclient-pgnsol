            <div class="mb-3 row">
                <%= form.label :nama_barang, "Nama Barang", class: "col-sm-4 col-form-label"  %>
                <div class="col-sm-8">
                <%= form.text_field :nama_barang, class: "form-control", required: true %>
                </div>
            </div>

            <div class="mb-3 row">
                <%= form.label :kelompok_barang, "Kelompok Barang", class: "col-sm-4 col-form-label" %>
                <div class="col-sm-8">
                <%= form.collection_select :item_group_id, ItemGroup.all, :id, :kelompok_barang, { prompt: "Pilih Kelompok Barang" }, class: "form-control", required: true %>
                </div>
            </div>

            <div class="mb-3 row">
                <%= form.label :kelompok_barang, "Spesifikasi Barang : ", class: "col-sm-4 col-form-label" %>
