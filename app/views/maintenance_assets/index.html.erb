<% unless notice.blank? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong id="notice"><%= notice %></strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<h1 class="my-5 text-center font-weight-bolder">Pemeliharaan Aset</h1>

<div class="row px-5 py-4">
  <div class = "col-sm-3">
  </div>
  <div class="col-sm-6">
  </div>
  <div class="col-sm-3 d-flex justify-content-end">
    <%= link_to new_maintenance_asset_path, class:"btn btn-primary btn-custom rounded-pill text" do %>
      <i id="my-icon" class="fas fa-plus"></i>
      <span>Pemeliharaan Aset</span>
    <% end %>
  </div>
</div>

<div class="row mx-0 px-5">
  <div class="table-responsive">
    <table class="table table-bordered" id="table">
      <thead class="bg-primary">
      <tr class="text-center">
        <th class="align-middle" style="width: 13%;">Nomor Pengeluaran</th>
        <th class="align-middle" style="width: 14%;">Tanggal Pengeluaran</th>
        <th class="align-middle" style="width: 6%;">Jenis Pengeluaran</th>
        <th class="align-middle" style="width: 15%;">keterangan Pengeluaran</th>
        <th class="align-middle" style="width: 15%;">Status</th>
        <th class="align-middle" style="width: 10%;">Inputer</th>
        <th class="align-middle" style="width: 17%;">Aksi</th>
      </tr>
      </thead>
      <tbody>
      <% @maintenance_assets.each do |sale| %>
        <%# warehouse = Warehouse.find_by(id: sale.warehouse) %>
        <% status = Status.find_by(id: sale.status) %>
        <% user = User.find_by(id: sale.user) %>
        <tr>
          <td class="align-middle"><%= sale.nomor_pengeluaran %></td>
          <td class="align-middle"><%= sale.tanggal_pengeluaran %></td>
          <td class="align-middle" id=""><%= sale.keterangan_pengeluaran %></td>
          <td class="align-middle"><%= sale.jenis_pengeluaran %></td>
          <td class="align-middle text-center"><%= status.try(:nama_status) %></td>
          <td class="align-middle text-center"><%= user.try(:name) %></td>
          <td class="align-middle text-center">
            <%#= link_to maintenance_asset,  class:"btn btn-warning btn-sm rounded-circle text-white py-1 mb-1 px-2" do  %>
<!--              <i class="fas fa-eye"></i>-->
            <%# end %>
            <%= link_to edit_maintenance_asset_path(sale),  class:"btn btn-success btn-sm rounded-circle text-white py-1 mb-1 px-2" do  %>
              <i class="fas fa-pencil-alt"></i>
            <% end %>
            <%#= link_to maintenance_asset, method: :delete, class:"btn btn-danger btn-sm rounded-circle text-white py-1 mb-1 px-2", data: { confirm: 'Are you sure?' } do %>
<!--              <i class="fas fa-trash"></i>-->
            <%# end %>
            <%#= link_to maintenance_asset, method: :delete, class:"btn btn-dark btn-sm rounded-circle text-white py-1 mb-1 px-2", data: { confirm: 'Are you sure?' } do %>
<!--              <i class="fas fa-download"></i>-->
            <%# end %>
            <%#= link_to maintenance_asset, method: :delete, class:"btn btn-primary btn-sm rounded-circle text-white py-1 mb-1 px-2", data: { confirm: 'Are you sure?' } do %>
<!--              <i class="fas fa-paper-plane"></i>-->
            <%# end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>